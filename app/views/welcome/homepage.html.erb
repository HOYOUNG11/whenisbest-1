<body>
    
    
    <div class="header">
      
        <div id="left">
            <h1>WhenIsBest</h1>
              <% if current_user %>
                <i><p id="greeting">Hi <%= current_user.first_name %>!</p></i>
              <p id="logout">Not <%= current_user.first_name %>? Click <%= link_to 'here', logout_path %>.</p>
              <% else %>
                <% #current_user = User.new %>
                <% #current_user.first_name = "Guest" %>
                <i><p id="greeting">Hi Guest!</p></i>
              <p id="logout">Looking to sign in? Click <%= link_to 'here', logout_path %>.</p>
              <% end %>
              
            
        </div>
        <div id="update">
            <p>
                
                <% if current_user %>
                  <% #current_user.save!(:validation => false)%>
                <% end %>
                

            </p>
        </div>
        
        <div id="right">
            <% if current_user %>
              <button id="white-button"><%= link_to 'Settings', edit_user_path(current_user) %></button>
            <% end %>
        </div>
    </div>
    
    
    <div class="content">
        
        
        <div class="sidebar">

            <div class="groups">
                <h3>Your groups</h3>
                <button id="white-button"><%= link_to 'Create new group', new_group_path %></button>
                <button id="white-button"><%= link_to 'Manage groups', groups_path %></button>
            </div>

            <div class="group-list">
            <% if current_user and current_user.group_ids != nil %>
              <% if current_user.group_ids.kind_of?(Array) %>
                <% group_ids = current_user.group_ids %>
              <% else %>
                <%= current_user.group_ids %>
                <% group_ids = current_user.group_ids.remove("[").remove("]").split(",") %>
              <% end %>
            
              <% group_ids.each do |group_id| %>
                  <div id="group-item">
                    
                    <% if group_id %>
                        <% group = Group.where(:id => group_id).first %>
                        <% if group %>
                          <h4><%=link_to group.name, group_path(group)%></h4>
                          <p><%= group.description %></p>
                         <% end %>
                    <% end %>
                  </div>
              <% end %>
              <% end %>

            </div>

        </div>

        
        
        <div class="calendar">
            
            <div class="calendar-header">
                <h3>Your calendar</h3>
                <button id="white-button"><%= link_to 'Add to calendar', new_calendar_event_path %></button>
            </div>
            
            <div class="calendar-body">
                <%= week_calendar do |date| %>
                <center><%= date.strftime("%b %d") %></center>
                <% end %>
            </div>
            
        </div>
    
        
    </div>
    
</body>