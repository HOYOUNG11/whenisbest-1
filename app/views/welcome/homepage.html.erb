<body>
    
    <div class="header">
        <h3>WhenIsBest</h3>
        <p>Hello, <%= @user.first_name %>! This is what your schedule looks like this week.</p>
        <button >Add to calendar</button>
    </div>
    
    
    <div class="body">
        
        <div class="sidebar">

            <div class="groups">
                <h2>Your Groups</h2>
                <button><%= link_to 'Create new group', new_group_path %></button>
            </div>

            <div class="group-list">
                <table>
                  <tr>
                    <th>Name</th>
                    <th>Description</th>
                  </tr>

                  <% @groups.each do |group| %>
                    <tr>
                        <td><%= link_to group.name, group_path(group) %></td>
                        <td><%= group.description %></td>
                        <td><%= link_to 'Edit', edit_group_path(group) %></td>
                      <td><%= button_to 'Destroy', group_path(group),
                              method: :delete,
                              data: { confirm: 'Are you sure?' }%></td>
                    </tr>
                  <% end %>
                </table>
            </div>

        </div>

        <div class="calendar">
            <p>This is where the calendar should be.</p>
        </div>
        
    </div>
    
</body>